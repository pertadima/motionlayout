<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_fab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Simple FAB Motion Layout"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_swipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Simple Swipe Motion Layout"
        app:layout_constraintTop_toBottomOf="@id/btn_fab" />

    <Button
        android:id="@+id/btn_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Simple Card Motion Layout"
        app:layout_constraintTop_toBottomOf="@id/btn_swipe" />
</androidx.constraintlayout.widget.ConstraintLayout>